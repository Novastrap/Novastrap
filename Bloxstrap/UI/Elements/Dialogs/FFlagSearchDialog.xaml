        </TabControl>

        <!--  Footer Buttons  -->
        <StackPanel
            Grid.Row="3"
            Margin="20,10,20,20"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <ui:Button
                x:Name="CloseButton"
                Width="80"
                Click="CloseButton_Click"
                Content="Close" />
